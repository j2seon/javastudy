package oopstudy;

public class Person {
	private String name;
	private int age;
	private int cashAmount; //현금보유
	private BankAccount account; //연결된 계좌?
	public String getName() {
		return name;
	}
	void setName(String name) {
		this.name = name;
	}
	public int getAge() {
		return age;
	}
	public void setAge(int age) {
		this.age = age;
	}
	public int getCashAmount() {
		return cashAmount;
	}
	public void setCashAmount(int cashAmount) {
		this.cashAmount = cashAmount;
	}
	public BankAccount getAccount() {
		return account;
	}
	public void setAccount(BankAccount account) {
		this.account = account;
	}
	//받을사람한테 보내기
	boolean transfer(Person to, int amount) {
		if(amount<0 ||amount>this.account.getBalance()) {
			System.out.println("false - from: ["+this.getName()+"], to: ["+to.getName()+"], amount: ["+amount+"], balance: ["+this.account.getBalance());
			return false;
		}else {
		to.getAccount().setBalance(getAccount().getBalance()+amount);
		this.getAccount().setBalance(getAccount().getBalance()-amount);
		System.out.println("true - from: ["+this.getName()+"], to: ["+to.getName()+"], amount: ["+amount+"], balance: ["+this.account.getBalance());
		return true;
		}
	}
	//이체받은 사람의 계정
	boolean transfer(BankAccount to, int amount) {
		to.setBalance(getAccount().getBalance()+amount);
		System.out.println("true - from: ["+to.getOwner().getName()+", to: ["+owner.getName()+"], amount: ["+amount+"], balance: ["+owner.getAccount().balance);
		return true;
		
	}
	
	
	
		
}