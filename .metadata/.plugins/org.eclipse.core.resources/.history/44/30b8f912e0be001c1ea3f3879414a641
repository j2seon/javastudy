package Exer1;

public class ShapePrinter {
    public void printTriangle(int height) {

    	/* 직각사각형
	    for(int i=1; i<height+1; i++ ) {
	    	for(int j=0; j<i; j++) {
	    		System.out.print('*');
	    	}
	    	System.out.println();
	    }
	    */
    	
    	for(int i =0; i<=height; i++) {
    		for(int j=1; j<height+i; j++) {
    			System.out.print("*");
    		}
    		System.out.println();
    	}
    	
    	
    	
    	
    }
}